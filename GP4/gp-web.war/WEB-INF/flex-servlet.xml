<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
			<props>
				<prop key="/viewReport.*">reportController</prop> 
				<prop key="/viewPublishedReport*">reportViewer</prop>
				<prop key="/doc*">documentViewer</prop>
				<prop key="/downloadWebsite/*">documentViewer</prop>
				<prop key="/downloadPublication/*">downloadPublicationController</prop>
				<prop key="/excel*">exportToExcel</prop>
				<prop key="/xlsxexcel.do">exportToXLSX</prop>
				<prop key="/labelPrintPreview.pdf">labelPrintPreview</prop>
				<prop key="/viewLabelPdf/*">viewLabelController</prop>
				<prop key="/websites.do">websitesController</prop>
				<prop key="/sidepanel.do">websitesController</prop>
				<prop key="/header.do">websitesController</prop>
				<prop key="/content.do">websitesController</prop>
				<prop key="/downloadLabels.do">downloadLabelsController</prop>
				<prop key="/viewFile.do">downloadRIFileController</prop>
				<prop key="/csv.do">exportToCSV</prop>
			</props>
        </property>
    </bean>
    
    
    <bean id="reportController" class="com.egatesolutions.gp.web.mvc.controller.ReportController" autowire="byName" />
    <bean id="reportViewer" class="com.egatesolutions.gp.web.mvc.controller.ReportViewer" autowire="byName" />
    <bean id="downloadRIFileController" class="com.egatesolutions.gp.web.mvc.controller.DownloadRIFileController" autowire="byName" />
    
    <bean id="documentViewer" class="com.egatesolutions.gp.web.mvc.controller.DocumentViewerController" autowire="byName" />
    <bean id="exportToExcel" class="com.egatesolutions.gp.web.mvc.controller.ExportToExcelController" autowire="byName" />
    <bean id="exportToXLSX" class="com.egatesolutions.gp.web.mvc.controller.ExportToXLSXController" autowire="byName" />
    
	<bean id="labelPrintPreview" class="com.egatesolutions.gp.web.mvc.controller.LabelPrintPreviewController" autowire="byName" />
	<bean id="viewLabelController" class="com.egatesolutions.gp.web.mvc.controller.ViewLabelController" autowire="byName" />
	<bean id="websitesController" class="com.egatesolutions.gp.web.mvc.controller.CatererWebsitesController" autowire="byName" />
	<bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter" />
	<bean id="downloadLabelsController" class="com.egatesolutions.gp.web.mvc.controller.DownloadLabelsController" autowire="byName" />
	<bean id="downloadPublicationController" class="com.egatesolutions.gp.web.mvc.controller.DownloadPublicationController" autowire="byName" />
	<bean id="exportToCSV" class="com.egatesolutions.gp.web.mvc.controller.ExportToCSVController" autowire="byName" />
</beans>