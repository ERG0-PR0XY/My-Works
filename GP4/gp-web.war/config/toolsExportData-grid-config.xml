<?xml version="1.0" encoding="UTF-8"?>
<GridConfig>
	<id>TOOLS_EXPORT_DATA_GRID</id>
	<name>TOOLS_EXPORT_DATA_GRID</name>
	<size>
		<height>400</height>
		<width>700</width>
	</size>
	<pagination>
		<loadingSize>100</loadingSize>
	</pagination>
	<header>
		<show>true</show>
		<title>Custom Grid Component</title>
		<align>left</align>
	</header>
	<views>
		<show>true</show>
		<title>Views</title>
		<defaultViewText>Default</defaultViewText>
	</views>
	<search>
		<show>true</show>
		<title>Search</title>
		<textWidth>300</textWidth>
	</search>
	<hideShowColumns>
		<show>true</show>
		<title>Show/ Hide Columns</title>
	</hideShowColumns>
	<lookup>
		<show>true</show>
		<title>Quick Look</title>
		<textWidth>200</textWidth>
	</lookup>
	<recordCount>
		<show>true</show>
		<title>Report Interface File(s):</title>
	</recordCount>
	<tools>
		<title>Tools</title>
		<show>false</show>
	</tools>
	<contextMenu>
		<menus>
			<menu>
				<title>Add Task</title>
				<icon>images/add.png</icon>
				<function>doAdd</function>
				<type>grid</type>
			</menu>
			<menu>
				<title>Edit Task</title>
				<icon>images/edit.png</icon>
				<function>doEdit</function>
				<type>row</type>
			</menu>
			<menu>
				<title>Delete Task</title>
				<icon>images/delete.png</icon>
				<function>doDelete</function>
				<type>row</type>
			</menu>
		</menus>
	</contextMenu>
	<functions>
		<rowClickCallback>callSingleClick</rowClickCallback>
		<rowDoubleClickCallback>callDoubleClick
		</rowDoubleClickCallback>
	</functions>

	<columns>
		<column>
			<title>File Name</title>
			<dataField>fileName</dataField>
			<dataType>String</dataType>
			<width>300</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>File Type</title>
			<dataField>fileType</dataField>
			<dataType>String</dataType>
			<width>Auto</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
			
		
		<column>
			<title>File Size(in MB)</title>
			<dataField>fileSize</dataField>
			<dataType>Number</dataType>
			<width>Auto</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>Report Name</title>
			<dataField>reportName</dataField>
			<dataType>String</dataType>
			<width>300</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>Created Date</title>
			<dataField>createdDate</dataField>
			<dataType>Date</dataType>
			<width>Auto</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>User Name</title>
			<dataField>userName</dataField>
			<dataType>String</dataType>
			<width>300</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>User Mail</title>
			<dataField>userMail</dataField>
			<dataType>String</dataType>
			<width>300</width>
			<visible>false</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column> 
		
		<column>
			<title>File Expiry Date</title>
			<dataField>expiresDate</dataField>
			<dataType>Date</dataType>
			<width>165</width>
			<visible>false</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		
		
	</columns>
</GridConfig>
