			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>Wt. Diff.</title>
			<dataField>weightDiff</dataField>
			<dataType>Number</dataType>
			<editable>true</editable>
			<width>128</width>
			<visible>true</visible>
			<hide>true</hide>
