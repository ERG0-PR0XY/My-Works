<?xml version="1.0" encoding="UTF-8"?>
<GridConfig>
	<id>FB_CURR_NXT_GRID</id>
	<name>FB_CURR_NXT_GRID</name>
	<size>
		<height>400</height>
		<width>700</width>
	</size>
	<pagination>
		<loadingSize>100</loadingSize>
	</pagination>
	<header>
		<show>true</show>
		<title>Custom Grid Component</title>
		<align>left</align>
	</header>
	<views>
		<show>true</show>
		<title>Views</title>
		<defaultViewText>Default</defaultViewText>
	</views>
	<search>
		<show>true</show>
		<title>Search</title>
		<textWidth>300</textWidth>
	</search>
    <hideShowColumns>
		<show>true</show>
		<title>Show/ Hide Columns</title>
    </hideShowColumns>
	<lookup>
		<show>true</show>
		<title>Quick Look</title>
		<textWidth>200</textWidth>
	</lookup>
	<recordCount>
		<show>true</show>
		<title>Flight Schedule Product(s)</title>
	</recordCount>
    <tools>
    	<title>Flight Schedule Product(s)</title>
		<show>true</show>
    </tools>
    <contextMenu>
    	<menus>
    		<menu>
    			<title>Add Task</title>
    			<icon>images/add.png</icon>
    			<function>doAdd</function>
    			<type>grid</type>
    		</menu>
    		<menu>
    			<title>Edit Task</title>
    			<icon>images/edit.png</icon>
    			<function>doEdit</function>
    			<type>row</type>
    		</menu>
    		<menu>
    			<title>Delete Task</title>
    			<icon>images/delete.png</icon>
    			<function>doDelete</function>
    			<type>row</type>
    		</menu>
    	</menus>
    </contextMenu>
    <functions>
    	<rowClickCallback>callSingleClick</rowClickCallback>
    	<rowDoubleClickCallback>callDoubleClick</rowDoubleClickCallback>
    </functions>

	<columns>
	
		<column>
			<title>Aircraft Type</title>
			<dataField>aircraftTypeCode</dataField>
			<dataType>String</dataType>
			<width>Auto</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>

		<column>
			<title>Aircraft Layout</title>
			<dataField>aircraftLayoutCode</dataField>
			<dataType>String</dataType>
			<width>Auto</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>

		<column>
			<title>Product Code</title>
			<dataField>productCode</dataField>
			<dataType>String</dataType>
			<width>Auto</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		<column>
			<title>Product Name</title>
			<dataField>productName</dataField>
			<dataType>String</dataType>
			<width>170</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>Current Vrsn#</title>
			<dataField>currentVersion</dataField>
			<dataType>Number</dataType>
			<width>Auto</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>Next Vrsn#</title>
			<dataField>nextVersion</dataField>
			<dataType>Number</dataType>
			<width>Auto</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>Current Vrsn Wt.</title>
			<dataField>curVerWeight</dataField>
			<dataType>Number</dataType>
			<width>163</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
