<?xml version="1.0" encoding="UTF-8"?>
<GridConfig>
	<id>containerGraphicsGrid</id>
	<name>containerGraphicsGrid</name>
	<size>
		<height>400</height>
		<width>700</width>
	</size>	
	<pagination>		
		<loadingSize>100</loadingSize>
	</pagination>
	<header>
		<show>true</show>
		<title>Custom Grid Component</title>
		<align>left</align>
	</header>
	<views>
		<show>false</show>
		<title>Views</title>
		<defaultViewText>Default</defaultViewText>		
	</views>
	<search>
		<show>false</show>
		<title>Search</title>
		<textWidth>300</textWidth>		
	</search>      
    <hideShowColumns>
		<show>false</show>
		<title>Show/ Hide Columns</title>		
    </hideShowColumns>  
	<lookup>
		<show>false</show>
		<title>Quick Look</title>
		<textWidth>200</textWidth>		
	</lookup>      
	<recordCount>
		<show>true</show>
		<title>Records:</title>		
	</recordCount>
   <tools>
    	<title>Tools</title>
		<show>false</show>		
    </tools> 
    <contextMenu>
    	<menus>
    		<menu>
    			<title>Add Image</title>
    			<icon>images/add.png</icon>
    			<function>doAdd</function>
    			<type>grid</type>
    		</menu>
    		<menu>
    			<title>Delete image</title>
    			<icon>images/delete.png</icon>
    			<function>doDelete</function>
    			<type>row</type>
    		</menu>
    	</menus>
  </contextMenu>
    <functions>
    	<rowClickCallback>callSingleClick</rowClickCallback>
    	<rowDoubleClickCallback>callDoubleClick</rowDoubleClickCallback>
    </functions>

		<columns>
		<idColumn>id</idColumn>
		 <column>
			<title>Image</title>
			<dataField>imageLibrary.imageData</dataField>
			<dataType>Image</dataType>
			<width>180</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>false</sort>
			<filter>false</filter>
			<search>false</search>
			<renderer type="ImageRenderer">
            <ImageRenderer ></ImageRenderer>
            </renderer>
			<resize>true</resize>
			<dragable>true</dragable>
		</column> 

		<column>
			<title>Name</title>
			<dataField>imageLibrary.imageLibraryName</dataField>
			<itemRenderer></itemRenderer>
			<filterDataType>String</filterDataType>
			<width>200</width>
			<visible>true</visible>
			<hide>false</hide>
			<sort>true</sort>
			<filter>false</filter>
			<search>false</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>Default</title>
			<dataField>isDefault</dataField>
			<dataType>CheckBox</dataType>
			<resultRenderer type="CheckBoxRenderer"/>
			<width>35</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>false</sort>
			<filter>false</filter>
			<search>false</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>

	</columns>
</GridConfig>
