<?xml version="1.0" encoding="UTF-8"?>
<GridConfig>
	<id>SCHDULER_CONFIG_GRID</id>
	<name>SCHDULER_CONFIG_GRID</name>
	<size>
		<height>400</height>
		<width>700</width>
	</size>
	<pagination>
		<loadingSize>100</loadingSize>
	</pagination>
	<header>
		<show>true</show>
		<title>Custom Grid Component</title>
		<align>left</align>
	</header>
	<views>
		<show>true</show>
		<title>Views</title>
		<defaultViewText>Default</defaultViewText>
	</views>
	<search>
		<show>true</show>
		<title>Search</title>
		<textWidth>300</textWidth>
	</search>
	<hideShowColumns>
		<show>true</show>
		<title>Show/ Hide Columns</title>
	</hideShowColumns>
	<lookup>
		<show>true</show>
		<title>Quick Look</title>
		<textWidth>200</textWidth>
	</lookup>
	<recordCount>
		<show>true</show>
		<title>Scheduler Configuration(s) :</title>
	</recordCount>
	<tools>
		<title>Tools</title>
		<show>false</show>
	</tools>
	<contextMenu>
		<menus>
			<menu>
				<title>Add Task</title>
				<icon>images/add.png</icon>
				<function>doAdd</function>
				<type>grid</type>
			</menu>
			<menu>
				<title>Edit Task</title>
				<icon>images/edit.png</icon>
				<function>doEdit</function>
				<type>row</type>
			</menu>
			<menu>
				<title>Delete Task</title>
				<icon>images/delete.png</icon>
				<function>doDelete</function>
				<type>row</type>
			</menu>
		</menus>
	</contextMenu>
	<functions>
		<rowClickCallback>callSingleClick</rowClickCallback>
		<rowDoubleClickCallback>callDoubleClick
		</rowDoubleClickCallback>
	</functions>

	<columns>
		<column>
			<title>Scheduler Name</title>
			<dataField>schedulerName</dataField>
			<dataType>String</dataType>
			<width>300</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>Cron Expression</title>
			<dataField>cornExp</dataField>
			<dataType>String</dataType>
			<width>Auto</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>

		<column>
			<title>Is Active</title>
			<dataField>isActive</dataField>
			<dataType>CheckBox</dataType>
			<resultRenderer type="CheckBoxRenderer"/>
			<width>Auto</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>Email Distribution List</title>
			<dataField>emailDistributionList</dataField>
			<dataType>String</dataType>
			<width>180</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>false</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
	<!--  	<column>
			<title>Last Start</title>
			<dataField>lastStart</dataField>
			<dataType>Date</dataType>
			<width>165</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>-->
		
		<column>
			<title>Last Run</title>
			<dataField>lastEnd</dataField>
			<dataType>Date</dataType>
			<width>Auto</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>Status</title>
			<dataField>status</dataField>
			<dataType>String</dataType>
			<width>200</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
			
		
	</columns>
</GridConfig>
