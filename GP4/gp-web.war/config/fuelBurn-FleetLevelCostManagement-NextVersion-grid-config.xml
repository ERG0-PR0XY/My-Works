			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		<column>
			<title>Next Version</title>
			<dataField>nextProductVersionNo</dataField>
			<dataType>String</dataType>
			<width>150</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		
		<column>
			<title>Current Version Weight</title>
			<dataField>currentProductVerWeight</dataField>
			<dataType>String</dataType>
			<width>150</width>
			<visible>true</visible>
