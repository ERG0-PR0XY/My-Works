<?xml version="1.0" encoding="UTF-8"?>
<GridConfig>
	<id>G6004</id>
	<name>Task Manager Audit Trail</name>
	<size>
		<height>400</height>
		<width>700</width>
	</size>
	<pagination>
		<loadingSize>100</loadingSize>
	</pagination>
	<header>
		<show>true</show>
		<title>Custom Grid Component</title>
		<align>left</align>
	</header>
	<views>
		<show>false</show>
		<title>Views</title>
		<defaultViewText>Default</defaultViewText>
	</views>
	<search>
		<show>true</show>
		<title>Search</title>
		<textWidth>300</textWidth>
	</search>
	<hideShowColumns>
		<show>true</show>
		<title>Show/ Hide Columns</title>
	</hideShowColumns>
	<lookup>
		<show>false</show>
		<title>Quick Look</title>
		<textWidth>200</textWidth>
	</lookup>
	<recordCount>
		<show>true</show>
		<title>Audit Trail</title>
	</recordCount>
	<tools>
		<title>Tools</title>
		<show>false</show>
    </tools>
    <contextMenu>
    	<menus>
    		<menu>
    			<title>Add Task</title>
    			<icon>images/add.png</icon>
    			<function>doAdd</function>
    			<type>grid</type>
    		</menu>
    		<menu>
    			<title>Edit Task</title>
    			<icon>images/edit.png</icon>
    			<function>doEdit</function>
    			<type>row</type>
    		</menu>
    		<menu>
    			<title>Delete Task</title>
    			<icon>images/delete.png</icon>
    			<function>doDelete</function>
    			<type>row</type>
    		</menu>
    	</menus>
    </contextMenu>
    <functions>
    	<rowClickCallback>callSingleClick</rowClickCallback>
    	<rowDoubleClickCallback>callDoubleClick</rowDoubleClickCallback>
    </functions>

	<columns>

		<column>
			<title>History ID</title>
			<dataField>id</dataField>
			<dataType>Number</dataType>
			<width>160</width>
			<visible>true</visible>
			<hide>false</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
	    <column>
			<title>Field Name</title>
			<dataField>fieldName</dataField>
			<dataType>String</dataType>
			<width>160</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>

		<column>
			<title>Previous Value</title>
			<dataField>previousValue</dataField>
			<dataType>String</dataType>
			<resultRenderer type="StringToolTipRenderer">
                <StringToolTipRenderer/>
            </resultRenderer>
			<width>160</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>

		<column>
			<title>Current Value</title>
			<dataField>currentValue</dataField>
			<dataType>String</dataType>
			<resultRenderer type="StringToolTipRenderer">
                <StringToolTipRenderer/>
            </resultRenderer>
			<width>160</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>

		<column>
			<title>User Name</title>
			<dataField>updatedByUserName</dataField>
			<dataType>String</dataType>
			<width>160</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>

		<column>
			<title>Date Time</title>
			<dataField>updatedDate</dataField>
			<dataType>Date</dataType>
			<resultRenderer type="DateTimeRenderer">
                <DateTimeRenderer/>
            </resultRenderer>
			<width>170</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>

	</columns>

</GridConfig>
