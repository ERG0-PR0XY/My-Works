<?xml version="1.0" encoding="UTF-8"?>
<GridConfig>
	<id>G6002</id>
	<name>Task Manager Comments</name>
	<size>
		<height>400</height>
		<width>700</width>
	</size>
	<pagination>
		<loadingSize>100</loadingSize>
	</pagination>
	<header>
		<show>true</show>
		<title>Custom Grid Component</title>
		<align>left</align>
	</header>
	<views>
		<show>false</show>
		<title>Views</title>
		<defaultViewText>Default</defaultViewText>
	</views>
	<search>
		<show>true</show>
		<title>Search</title>
		<textWidth>300</textWidth>
	</search>
	<hideShowColumns>
		<show>true</show>
		<title>Show/ Hide Columns</title>
	</hideShowColumns>
	<lookup>
		<show>false</show>
		<title>Quick Look</title>
		<textWidth>200</textWidth>
	</lookup>
	<recordCount>
		<show>true</show>
		<title>Comments</title>
	</recordCount>
	<tools>
		<title>Tools</title>
		<show>false</show>
    </tools>
    <contextMenu>
    	<menus>
    		<menu>
    			<title>Add Task</title>
    			<icon>images/add.png</icon>
    			<function>doAdd</function>
    			<type>grid</type>
    		</menu>
    		<menu>
    			<title>Edit Task</title>
    			<icon>images/edit.png</icon>
    			<function>doEdit</function>
    			<type>row</type>
    		</menu>
    		<menu>
    			<title>Delete Task</title>
    			<icon>images/delete.png</icon>
    			<function>doDelete</function>
    			<type>row</type>
    		</menu>
    	</menus>
    </contextMenu>
    <functions>
    	<rowClickCallback>callSingleClick</rowClickCallback>
    	<rowDoubleClickCallback>callDoubleClick</rowDoubleClickCallback>
    </functions>

	<columns>
		<column>
			<title>Comment Type</title>
			<dataField>taskmanCommentsType.taskmanCommentsTypeName</dataField>
			<dataType>String</dataType>
			<width>150</width>
			<visible>true</visible>
			<hide>false</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
	    <column>
			<title>Comments</title>
			<dataField>shortComments</dataField>
			<dataType>List</dataType>
			<resultRenderer type="HTMLRenderer">
				<HTMLRenderer/>
			</resultRenderer>
			<width>450</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>false</sort>
			<filter>false</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		<column>
			<title>Created By</title>
			<dataField>createdByUserName</dataField>
			<dataType>String</dataType>
			<width>100</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		<column>
			<title>Created Date</title>
			<dataField>createdDate</dataField>
			<dataType>Date</dataType>
			<resultRenderer type="DateTimeRenderer">
                <DateTimeRenderer/>
            </resultRenderer>
			<width>170</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		<column>
			<title>Updated By</title>
			<dataField>updatedByUserName</dataField>
			<dataType>String</dataType>
			<width>100</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		<column>
			<title>Updated Date</title>
			<dataField>updatedDate</dataField>
			<dataType>Date</dataType>
			<resultRenderer type="DateTimeRenderer">
                <DateTimeRenderer/>
            </resultRenderer>
			<width>170</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
	</columns>

</GridConfig>
