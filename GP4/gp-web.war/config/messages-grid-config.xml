<?xml version="1.0" encoding="UTF-8"?>
<GridConfig>
	<id>G7001</id>
	<name>messagesGrid</name>
	<size>
		<height>400</height>
		<width>700</width>
	</size>	
	<pagination>		
		<loadingSize>100</loadingSize>
	</pagination>
	<header>
		<show>true</show>
		<title>Custom Grid Component</title>
		<align>left</align>
	</header>
	<views>
		<show>false</show>
		<title>Views</title>
		<defaultViewText>Default</defaultViewText>		
	</views>
	<search>
		<show>true</show>
		<title>Search</title>
		<textWidth>300</textWidth>		
	</search>      
    <hideShowColumns>
		<show>true</show>
		<title>Show/ Hide Columns</title>		
    </hideShowColumns>  
	<lookup>
		<show>true</show>
		<title>Quick Look</title>
		<textWidth>200</textWidth>		
	</lookup>      
	<recordCount>
		<show>true</show>
		<title>Records:</title>		
	</recordCount>
    <tools>
    	<title>Tools</title>
		<show>false</show>		
    </tools>
    <contextMenu>
    	<menus>
    		<menu>
    			<title>Add Image</title>
    			<icon>images/add.png</icon>
    			<function>doAdd</function>
    			<type>grid</type>
    		</menu>
    		<menu>
    			<title>Edit Image</title>
    			<icon>images/edit.png</icon>
    			<function>doEdit</function>
    			<type>row</type>
    		</menu>
    		<menu>
    			<title>Delete image</title>
    			<icon>images/delete.png</icon>
    			<function>doDelete</function>
    			<type>row</type>
    		</menu>
    	</menus>
    </contextMenu>
    <functions>
    	<rowClickCallback>callSingleClick</rowClickCallback>
    	<rowDoubleClickCallback>callDoubleClick</rowDoubleClickCallback>
    </functions>

		<columns>
		<idColumn>id</idColumn>
		
		<column>
			<title>Id</title>
			<dataField>id</dataField>
			<dataType>Number</dataType>
			<width>80</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>false</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
		<column>
			<title>Code</title>
			<dataField>code</dataField>
			<dataType>String</dataType>
			<width>350</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>false</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>
	
		<column>
			<title>Description</title>
			<dataField>description</dataField>
			<dataType>String</dataType>
			<width>350</width>
			<visible>true</visible>
			<hide>true</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>		
		<column>
			<title>Type</title>
			<dataField>type</dataField>
			<dataType>String</dataType>
			<width>40</width>
			<visible>true</visible>
			<hide>false</hide>
			<sort>true</sort>
			<filter>true</filter>
			<search>true</search>
			<resize>true</resize>
			<dragable>true</dragable>
		</column>	
	</columns>
</GridConfig>
